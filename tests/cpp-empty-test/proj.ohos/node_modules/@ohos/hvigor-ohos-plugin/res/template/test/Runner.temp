package ohos.testkit.runner;

import java.util.concurrent.CountDownLatch;

import ohos.aafwk.ability.delegation.AbilityDelegatorRegistry;
import ohos.aafwk.ability.delegation.TestRunner;

/**
 * The {@link TestRunner} implementation to run ohos junit tests.
 * */
public class Runner extends TestRunner {

    /**
     * Lock used to wait and notify test run finished.
     */
    static final CountDownLatch runFinishedLatch = new CountDownLatch(1);

    /**
     * Lock used to wait and notify test run started.
     */
    static final CountDownLatch runStartedLatch = new CountDownLatch(1);


    @Override
    public boolean prepare() {
        return true;
    }


    @Override
    public void run() {
        // ensure test status are printed in new lines, and then notify test run started
        AbilityDelegatorRegistry.getAbilityDelegator().println(System.lineSeparator());
        runStartedLatch.countDown();
        try {
            // lock here to keep test thread in running state. see: AbilityDelegator#runUnittest
            runFinishedLatch.await();
        } catch (InterruptedException ie) {
            ie.printStackTrace();
        }
    }
}
